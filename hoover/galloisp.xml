    <bioghist id="bioghist-1.7.4">
      <head>Biographical Note</head>
      <chronlist>
        <chronitem>
          <date calendar="gregorian" era="ce">1911, June 29</date>
          <event>Born in Turino, Italy</event>
        </chronitem>
        <chronitem>
          <date calendar="gregorian" era="ce">World War II</date>
          <event>Flew in bombers from England</event>
        </chronitem>
        <chronitem>
          <date calendar="gregorian" era="ce">1945</date>
          <eventgrp>
            <event>Joined the general staff of the French Air Force</event>
            <event>Urged upon President De Gaulle the "Force de Frappe," the independent French nuclear deterrent</event>
          </eventgrp>
        </chronitem>
        <chronitem>
          <date calendar="gregorian" era="ce">1957</date>
          <eventgrp>
            <event>Retired as Brigadier General from the French Air Force</event>
            <event>Author, <title render="italic">L'Europe au D&#xE9;fi</title></event>
          </eventgrp>
        </chronitem>
        <chronitem>
          <date calendar="gregorian" era="ce">1958-</date>
          <event>Consultant, "Soci&#xE9;t&#xE9; des Avions Marcel Dassault"</event>
        </chronitem>
        <chronitem>
          <date calendar="gregorian" era="ce">1960</date>
          <event>Author, <title render="italic">Strat&#xE9;gie a l'Ere Nucl&#xE9;aire</title></event>
        </chronitem>
        <chronitem>
          <date calendar="gregorian" era="ce">1961</date>
          <event>Author, <title render="italic">L'Alliance Atlantique</title></event>
        </chronitem>
        <chronitem>
          <date calendar="gregorian" era="ce">1968</date>
          <event>Author, <title render="italic">Paradoxes de la Paix</title></event>
        </chronitem>
        <chronitem>
          <date calendar="gregorian" era="ce">1972</date>
          <event>Author, <title render="italic">L'Europe Change de Maitre</title></event>
        </chronitem>
        <chronitem>
          <date calendar="gregorian" era="ce">1975</date>
          <event>Author, <title render="italic">La Grande Berne</title></event>
        </chronitem>
        <chronitem>
          <date calendar="gregorian" era="ce">1976</date>
          <event>Author, <title render="italic">L'Adieu aux Arm&#xE9;es</title></event>
        </chronitem>
        <chronitem>
          <date calendar="gregorian" era="ce">1977</date>
          <event>Author, <title render="italic">Le Renoncement</title></event>
        </chronitem>
      </chronlist>
    </bioghist>
