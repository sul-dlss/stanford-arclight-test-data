        <bioghist id="ref8">
            <head>Biographical Note.</head>
            <chronlist>
                <chronitem>
                    <date>1889, December 22</date>
                    <event>Born, Woodstock, Virginia</event>
                </chronitem>
                <chronitem>
                    <date>1912</date>
                    <event>B.S., U.S.M.A., West Point, N.Y.</event>
                </chronitem>
                <chronitem>
                    <date>1917-1918</date>
                    <event>Assigned to Third Division</event>
                </chronitem>
                <chronitem>
                    <date>1927</date>
                    <event>Graduate, Ecole Superieure de Guerre</event>
                </chronitem>
                <chronitem>
                    <date>1942</date>
                    <event>Promoted to Major General</event>
                </chronitem>
                <chronitem>
                    <date>1943-1945</date>
                    <event>Commanding General of XV Corps</event>
                </chronitem>
                <chronitem>
                    <date>1945</date>
                    <event>President of the Secretary of War's Personnel Board</event>
                </chronitem>
                <chronitem>
                    <date>1949</date>
                    <event>Promoted to General; Vice Chief of Staff of the Army</event>
                </chronitem>
            </chronlist>
        </bioghist>
